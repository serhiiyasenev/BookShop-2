{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Server=localhost;Database=BookShopTest;Trusted_Connection=True;MultipleActiveResultSets=True;TrustServerCertificate=True"
  },
  "AllowedExtensions": {
    "ImageAllowed": ".img;.jpg;.jpeg;.png;.bmp",
    "TextAllowed": ".txt;.pdf;.doc;.docx"
  },
  "ImageStorageSettings": {
    "LocalStorage": {
      "StoragePath": "../ImageStorage"
    },
    "BlobStorage": {
      "StoragePath": "https://<storage-account-name>.blob.core.windows.net",
      "containerName": "BookShopImages",
      "Account": {
        "UserName": "TBD",
        "Password": "TBD"
      }
    }
  },
  "SendGridSettings": {
    "ApiKey": "SEND_GRID_API_KEY",
    "SenderEmailFromKey": "SEND_GRID_EMAIL_FROM",
    "SenderNameFrom": "BookShop"
  }
}
